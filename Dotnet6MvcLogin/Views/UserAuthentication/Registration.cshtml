@model SistemaBiblioteca.Models.Auth.RegistrationModel
@{
    Layout = null;
}
@Html.ValidationSummary()
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro | Sistema Biblioteca</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script defer src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="row my-5">
        <div class="col-md-3 offset-md-5">
            <div class="flex justify-center my-2">
                <img src="http://www.forosecuador.ec/imgfe/sello-uce-logotipo-universidad-central-ecuador-1.png" class="w-1/3 " alt="Logo" />
            </div>
            <div class="card login-logout-tab">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="/UserAuthentication/Login">Ingresar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/UserAuthentication/Registration">Registrarse</a>
                        </li>

                    </ul>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                                    <h3>Formulario de Registro</h3>
                                    <form asp-action="Registration" method="post">
                                        <div class="form-group">
                                            <label>Nombre</label>
                                            <input type="text" class="form-control" asp-for="FirstName" />
                                            <span class="text-danger" asp-validation-for="FirstName"></span>
                                        </div>

                                        <div class="form-group">
                                            <label>Apellido</label>
                                            <input type="text" class="form-control" asp-for="LastName" />
                                            <span class="text-danger" asp-validation-for="LastName"></span>
                                        </div>

                                        <div class="form-group">
                                            <label>Correo Electrónico</label>
                                            <input type="text" class="form-control" asp-for="Email" />
                                            <span class="text-danger" asp-validation-for="Email"></span>

                                        </div>

                                        <div class="form-group">
                                            <label>Usuario</label>
                                            <input type="text" class="form-control" asp-for="Username" />
                                            <span class="text-danger" asp-validation-for="Username"></span>

                                        </div>

                                        <div class="form-group">
                                            <label>Contraseña</label>
                                            <input type="password" class="form-control" asp-for="Password" />
                                            <span class="text-danger" asp-validation-for="Password"></span>

                                        </div>

                                        <div class="form-group">
                                            <label>Confirmar Contraseña</label>
                                            <input type="password" class="form-control" asp-for="PasswordConfirm" />
                                            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

                                        </div>



                                        @if (TempData["msg"] != null)
                                        {
                                            <div class="form-group">
                                                <span class="text-info">@TempData["msg"]</span>
                                            </div>
                                        }

                                      <div class="mt-3">

                                            <a class="btn btn-secondary" href="/UserAuthentication/Login">Regresar</a>
                                        <button type="submit" class="btn btn-primary">Registrarse</button>
                                      </div>
                                    </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.js"></script>
    <script src="https://releases.jquery.com/git/jquery-git.min.js"></script>
    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
</body>
</html>










