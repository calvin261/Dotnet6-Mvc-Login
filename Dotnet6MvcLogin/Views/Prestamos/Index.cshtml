@model IEnumerable<SistemaBiblioteca.Models.Prestamo>

<h1 class="text-center text-2xl font-semibold">Administrar Prestamos</h1>
<div class="flex flex-row-reverse">
    <div class=" bg-blue-500 px-3 py-2 rounded-xl hover:bg-blue-700">
        <a class="text-white hover:text-white" asp-action="Create">Nuevo Prestamo</a>
    </div>
</div>
<form asp-controller="Prestamos" asp-action="Index" method="get">
    <div class="flex">
        <input class="appearance-none border border-red-500 rounded w-1/3 py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" placeholder="Buscar por Título o Autor" type="text" name="SearchString" />
        <input type="submit" class="appearance-none border border-red-500 rounded py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline text-white bg-blue-500" value="Buscar" />
        <a asp-controller="Prestamos" asp-action="Index" class="appearance-none border border-red-500 rounded py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline text-white bg-blue-500">Limpiar</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPrestamo)

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Libro.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FirstName)   @Html.DisplayFor(modelItem => item.User.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPrestamo)
                </td>

                <td>
                   <a class="px-2 py-2 text-blue-500" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="px-2 py-2 text-blue-500" asp-action="Details" asp-route-id="@item.Id">Revisar Prestamo</a> |
                    <a class="px-2 py-2 text-red-500" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
